{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "nginx-pinger",
    "labels": {
      "name": "nginx-pinger"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "nginx",
        "image": "nginx",
        "ports": [
          {
            "containerPort": 80
          }
        ],
        "env": [
          {
            "name": "SECRET_MESSAGE",
            "value": "Nginx is the bomb!"
          }
        ]
      },
      {
        "name": "pinger",
        "image": "reselbob/pinger",
        "ports": [
          {
            "hostPort": 3000,
            "containerPort": 3000
          }
        ],
        "env": [
          {
            "name": "SECRET_MESSAGE",
            "value": "Pinger Rocks"
          }
        ]
      }
    ]
  }
}